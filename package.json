{
  "name": "firefox-devtools-mcp",
  "version": "0.1.0",
  "description": "MCP server for Firefox DevTools - Take JSON snapshots for AI debugging",
  "type": "module",
  "main": "./build/index.js",
  "bin": {
    "firefox-devtools-mcp": "./build/index.js"
  },
  "scripts": {
    "build": "tsc && chmod 755 build/index.js",
    "dev": "tsx src/index.ts",
    "watch": "tsc --watch",
